<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        // Timeline con ScrollTrigger configurado para ejecutarse una sola vez
        const tl = gsap.timeline({
            scrollTrigger: {
                trigger: "#fecha-evento",
                start: "top 85%",
                once: true //  Animaci贸n solo una vez
            },
            defaults: { ease: "power2.out" }
        });

        tl.fromTo("#fecha-evento", { opacity: 0, y: -30 }, { opacity: 1, y: 0, duration: 1 }, 0)
          .fromTo("#hora-evento", { opacity: 0, y: -10 }, { opacity: 1, y: 0, duration: 0.8 }, 0.3)
          .fromTo("#foto-central", { opacity: 0, scale: 0.95 }, { opacity: 1, scale: 1, duration: 1 }, 0.4)
          .fromTo("#mensaje-principal", { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.8 }, 0.6)
          .fromTo("#linea-divisoria", { opacity: 0, scaleX: 0 }, { opacity: 1, scaleX: 1, duration: 0.6 }, 0.8)
          .fromTo("#info-ceremonia", { opacity: 0, y: 15 }, { opacity: 1, y: 0, duration: 0.6 }, 1)
          .fromTo("#nombres-padres", { opacity: 0, y: 15 }, { opacity: 1, y: 0, duration: 0.6 }, 1.2)
          .fromTo("#deco-floral-inferior", { opacity: 0, scale: 0.8 }, { opacity: 1, scale: 1, duration: 0.6 }, 1.4)
          .fromTo("#invitacion-final", { opacity: 0, y: 10 }, { opacity: 1, y: 0, duration: 0.6 }, 1.6);
    });
</script>