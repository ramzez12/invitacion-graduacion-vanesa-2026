<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      // Selectores 煤nicos
      const recepElements = "#icono-recepcion, #mariposa-recep-izq, #mariposa-recep-der, #titulo-recepcion, #subtitulo-recepcion, #info-recepcion, #boton-recepcion-mapa";

      // Estado inicial
      gsap.set("#icono-recepcion, #titulo-recepcion, #subtitulo-recepcion, #info-recepcion, #boton-recepcion-mapa", { opacity: 0, scale: 0.9 });
      gsap.set("#mariposa-recep-izq", { opacity: 0, x: -30 });
      gsap.set("#mariposa-recep-der", { opacity: 0, x: 30 });

      ScrollTrigger.create({
        trigger: "#icono-recepcion",
        start: "top 85%",
        onEnter: () => {
          const tl = gsap.timeline();
          
          tl.to(recepElements, {
            opacity: 1,
            scale: 1,
            x: 0,
            duration: 1,
            ease: "power2.out",
            stagger: 0.1 // Aparecen ligeramente escalonados para m谩s elegancia
          });

          //  FLOTADO CONTINUO
          gsap.to("#mariposa-recep-izq", {
            y: -15, x: 5, rotation: 5, duration: 3, ease: "sine.inOut", yoyo: true, repeat: -1
          });

          gsap.to("#mariposa-recep-der", {
            y: -15, x: -5, rotation: -5, duration: 3.2, ease: "sine.inOut", yoyo: true, repeat: -1
          });
        }
      });
    });
  }
</script>

<style>
  .mariposa-flotante {
    will-change: transform;
  }
  .font-charm { font-family: 'Charm', cursive; }

    .icono-dorado {
    filter: brightness(0) saturate(100%) invert(56%) sepia(12%) saturate(1486%) hue-rotate(359deg) brightness(92%) contrast(87%);
    transition: filter 0.3s ease, transform 0.3s ease;
  }
</style>