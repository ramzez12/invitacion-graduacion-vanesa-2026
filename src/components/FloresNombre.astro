<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        // Configuramos el Timeline con ScrollTrigger
        const tl = gsap.timeline({
            scrollTrigger: {
                trigger: "#titulo-graduacion", // Se activa cuando el t铆tulo entra en vista
                start: "top 90%", // Empieza un poco antes de llegar
                once: true //  ESTA ES LA CLAVE: Solo se ejecuta una vez
            },
            defaults: { ease: "power2.out" }
        });
        
        // TODAS LAS ANIMACIONES AL MISMO TIEMPO (usando el 0 al final)
        tl.fromTo("#flores-arriba", 
            { opacity: 0, y: -80 }, 
            { opacity: 1, y: 0, duration: 1.5 }, 
            0)
          .fromTo("#titulo-graduacion", 
            { opacity: 0, scale: 0.8 }, 
            { opacity: 1, scale: 1, duration: 1.2 }, 
            0)
          .fromTo("#linea-decorativa", 
            { opacity: 0, scaleX: 0 }, 
            { opacity: 1, scaleX: 1, duration: 1 }, 
            0)
          .fromTo("#nombre-graduado", 
            { opacity: 0, y: 30 }, 
            { opacity: 1, y: 0, duration: 1.2 }, 
            0)
          .fromTo("#info-academica", 
            { opacity: 0, y: 20 }, 
            { opacity: 1, y: 0, duration: 1 }, 
            0)
          .fromTo("#gorrito", 
            { opacity: 0, y: 80, rotation: -15 }, 
            { opacity: 1, y: 0, rotation: 0, duration: 1.5 }, 
            0);
    });
</script>