---
// SugerenciaRegalos.astro
---
<section class="py-4 px-4 relative overflow-hidden">
  <div class="max-w-xl mx-auto text-center relative">
    
    <div class="relative mb-6" id="contenedor-regalos">
      
      <!-- Decoración izquierda -->
      <!-- <div class="absolute left-0 top-1/2 -translate-y-1/2 w-12 pointer-events-none -ml-4 sm:-ml-10 z-10" id="flores-regalos-izq">
        <img
          src="/imagenes/lateral.png"
          alt="Decoración izquierda"
          class="w-full h-auto object-contain"
        />
      </div> -->

      <!-- Título -->
      <div class="mb-8" id="titulo-regalos">
        <h2 class="font-great-vibes text-4xl md:text-3xl text-[#D4AF37]  ">
          Sugerencia de regalos
        </h2>
        <div class="w-20 h-[2px] bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent mx-auto mt-2"></div>
      </div>

      <!-- Mensaje principal -->
      <div class="mb-8 px-4" id="mensaje-regalos">
       
        <p class="font-charm text-[#7A8980] text-xl md:text-lg leading-relaxed">
          Me encantaría contar con tu presencia para celebrar este logro tan especial. Tu compañía será mi mayor regalo; pero, si deseas acompañarla con un detalle, el efectivo será recibido con gratitud. Lo que realmente valoro es tu intención y tu presencia
        </p>
      </div>

      <!-- Sección de EFECTIVO con icono de sobre -->
      <div class="flex justify-center mb-6" id="seccion-efectivo">
        <div class="relative inline-block">
          <div class="bg-gradient-to-br from-[#D4AF37] via-[#F4D03F] to-[#D4AF37] p-[3px] rounded-2xl shadow-xl">
            <div class="bg-white px-8 py-6 rounded-2xl">
              <p class="font-charm text-2xl md:text-3xl text-[#7A8980] font-bold mb-3">
                EFECTIVO
              </p>
              <!-- Icono de sobre -->
              <div class="flex justify-center">
                <svg class="w-16 h-16 text-[#7A8980]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Decoración floral inferior -->
      <!-- <div class="mt-6 flex justify-center" id="deco-regalos">
        <svg width="80" height="40" viewBox="0 0 80 40" class="text-[#5f6f68]/30">
          <path d="M10,20 Q20,10 30,20 T50,20 T70,20" stroke="currentColor" stroke-width="1" fill="none"/>
          <circle cx="40" cy="20" r="3" fill="currentColor"/>
          <circle cx="20" cy="20" r="2" fill="currentColor"/>
          <circle cx="60" cy="20" r="2" fill="currentColor"/>
        </svg>
      </div> -->

      <!-- Decoración derecha -->
      <!-- <div class="absolute right-0 top-1/2 -translate-y-1/2 w-12 pointer-events-none -mr-4 sm:-mr-10 z-10" id="flores-regalos-der"> -->
        <!-- <img
          src="/imagenes/lateral.png"
          alt="Decoración derecha"
          class="w-full h-auto object-contain scale-x-[-1]"
        />
      </div> -->
    </div>

  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      const tlRegalos = gsap.timeline({
        scrollTrigger: {
          trigger: "#contenedor-regalos",
          start: "top 85%",
          once: true
        }
      });

      tlRegalos
        .from("#titulo-regalos", { 
          opacity: 0, 
          y: -20, 
          duration: 0.8 
        })
        .from("#mensaje-regalos", { 
          opacity: 0, 
          y: 15, 
          duration: 0.8 
        }, "-=0.4")
        .from("#seccion-efectivo", { 
          opacity: 0, 
          scale: 0.5, 
          rotate: -5, 
          duration: 1, 
          ease: "back.out(1.7)" 
        }, "-=0.4")
        .from("#deco-regalos", { 
          opacity: 0, 
          scale: 0.8, 
          duration: 0.6 
        }, "-=0.5")
        .from("#flores-regalos-izq", { 
          opacity: 0, 
          x: -40, 
          duration: 1 
        }, "-=1")
        .from("#flores-regalos-der", { 
          opacity: 0, 
          x: 40, 
          duration: 1 
        }, "-=1");
    });
  }
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Charm:wght@400;700&display=swap');
  .font-charm { font-family: 'Charm', cursive; }
</style>