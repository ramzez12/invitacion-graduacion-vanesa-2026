    </div>

  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      // Estado inicial
      gsap.set("#icono-direccion", { opacity: 0, scale: 0.8 });
      gsap.set("#titulo-ceremonia", { opacity: 0, y: -20 });
      gsap.set("#titulo-direccion", { opacity: 0, scale: 0.9 });
      gsap.set("#info-direccion", { opacity: 0, scale: 0.9 });
      gsap.set("#boton-ubicacion", { opacity: 0, scale: 0.9 });
      gsap.set("#flores-dir-izq", { opacity: 0, x: -30 });
      gsap.set("#flores-dir-der", { opacity: 0, x: 30 });

      // ‚ú® ANIMACI√ìN SIMULT√ÅNEA
      ScrollTrigger.create({
        trigger: "#icono-direccion",
        start: "top 85%",
        end: "top 20%",
        onEnter: () => {
          const tl = gsap.timeline();
          
          tl.to("#titulo-ceremonia", {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: "power2.out",
          })
          .to("#icono-direccion", {
            opacity: 1,
            scale: 1,
            duration: 1,
            ease: "back.out(1.5)",
          }, "-=0.4")
          .to("#flores-dir-izq, #flores-dir-der", {
            opacity: 1,
            x: 0,
            duration: 1,
            ease: "power2.out",
          }, "-=0.8")
          .to("#titulo-direccion, #info-direccion, #boton-ubicacion", {
            opacity: 1,
            scale: 1,
            duration: 0.8,
            ease: "back.out(1.2)",
            stagger: 0.1,
          }, "-=0.4");
        },
        onLeaveBack: () => {
          gsap.set("#icono-direccion, #flores-dir-izq, #flores-dir-der, #titulo-ceremonia, #titulo-direccion, #info-direccion, #boton-ubicacion", {
            opacity: 0,
          });
        },
      });

      console.log("üìçüå∏ Secci√≥n de Direcci√≥n verde y dorado inicializada");
    });
  }
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');
  
  .font-sans {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* Color del icono iglesia en verde */
  .icono-verde {
    filter: brightness(0) saturate(100%) invert(57%) sepia(11%) saturate(636%) hue-rotate(98deg) brightness(93%) contrast(89%);
    transition: filter 0.3s ease, transform 0.3s ease;
  }

  .icono-verde:hover {
    filter: brightness(0) saturate(100%) invert(57%) sepia(11%) saturate(636%) hue-rotate(98deg) brightness(100%) contrast(89%);
    transform: scale(1.05);
  }
</style>