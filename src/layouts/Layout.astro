---
// src/layouts/Layout.astro
import '../styles/global.css';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="es" class="m-0 p-0">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- ✅ ESTO FUERZA EL MODO CLARO -->
    <meta name="color-scheme" content="light only" />
    
    <link rel="icon" type="image/svg+xml" href="/imagenes/graduacion.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Crimson+Text:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Crimson+Text:wght@400;600;700&family=Cormorant+Garamond:ital,wght@0,300;0,400;1,300;1,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Charm:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      /* ✅ FORZAR MODO CLARO EN TODO EL DOCUMENTO */
      :root {
        color-scheme: light only;
      }
      
      html {
        width: 100%;
        height: 100%;
        overflow-x: hidden;
        color-scheme: light only; /* ✅ Fuerza modo claro */
      }

      body {
        margin: 0;
        padding: 0;
        width: 100%;
        min-height: 100vh;
        overflow-x: hidden;
        background-image: url('/imagenes/texturafondo.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color-scheme: light only; /* ✅ Fuerza modo claro */
        
        /* ✅ FORZAR COLORES ESPECÍFICOS */
        background-color: #ffffff !important;
        color: #000000 !important;
      }

      main {
        background: transparent !important;
      }
      
      /* ✅ EVITAR QUE LAS IMÁGENES SE INVIERTAN EN DARK MODE */
      img, picture, video {
        filter: none !important;
        -webkit-filter: none !important;
      }
    </style>
  </head>
  <body class="min-h-screen m-0 p-0">
    <main class="m-0 p-0 overflow-x-hidden">
      <slot />
    </main>
  </body>
</html>